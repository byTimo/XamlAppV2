<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ZappChat_v3.Controls"
                    xmlns:chatMamber="clr-namespace:ZappChat_v3.Core.ChatElements">
    <DataTemplate DataType="{x:Type chatMamber:Friend}">
        <Grid Margin="0,5" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Ellipse Grid.Column="0" Fill="DarkGray" Margin="20,5,10,5" Height="17" Width="17"/>
            <TextBlock Grid.Column="1" Text="{Binding Name}" Background="Transparent" FontSize="14.667" FontFamily="HelveticaNeueCyr" Margin="0,2,0,0" VerticalAlignment="Center"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>