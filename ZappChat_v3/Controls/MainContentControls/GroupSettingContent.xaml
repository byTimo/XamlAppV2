<UserControl x:Class="ZappChat_v3.Controls.MainContentControls.GroupSettingContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:chatMamber="clr-namespace:ZappChat_v3.Core.ChatElements"
             mc:Ignorable="d" 
             d:DesignHeight="468" d:DesignWidth="515" DataContext="{Binding Group,RelativeSource={RelativeSource Self}}">
    <UserControl.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="true" CornerRadius="7">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource ZappChat.Sky}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="AllowDrop" Value="true"/>
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="Item.MouseOver.Background" Color="#fffff9e7"/>
        <SolidColorBrush x:Key="Item.MouseOver.Border" Color="#fffff9e7"/>
        <Style TargetType="{x:Type ListBoxItem}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Padding" Value="4,1"/>
            <Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
            <Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">
                            <Grid>
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                <Button x:Name="Bn" HorizontalAlignment="Right" Visibility="Collapsed" Background="Transparent" Margin="0,5,40,5" Cursor="Hand" Click="Bn_OnClick" BorderBrush="{StaticResource ZappChat.VeryLightSky}" Foreground="{StaticResource ZappChat.Blue}" Padding="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Rectangle Fill="{StaticResource ZappChat.Blue}" Height="1" Width="12" RenderTransformOrigin="0.5,0.5" Grid.Column="0" Margin="0" >
                                            <Rectangle.RenderTransform>
                                                <TransformGroup>
                                                    <ScaleTransform/>
                                                    <SkewTransform/>
                                                    <RotateTransform Angle="45"/>
                                                    <TranslateTransform/>
                                                </TransformGroup>
                                            </Rectangle.RenderTransform>
                                        </Rectangle>
                                        <Rectangle Fill="{StaticResource ZappChat.Blue}" Width="12" Height="1" Grid.Column="0" RenderTransformOrigin="0.5,0.5">
                                            <Rectangle.RenderTransform>
                                                <TransformGroup>
                                                    <ScaleTransform/>
                                                    <SkewTransform/>
                                                    <RotateTransform Angle="-45"/>
                                                    <TranslateTransform/>
                                                </TransformGroup>
                                            </Rectangle.RenderTransform>
                                        </Rectangle>
                                        <TextBlock Foreground="{StaticResource ZappChat.Blue}" Grid.Column="1" Text="Исключить" FontFamily="HelveticaNeueCyr" FontSize="13.333" FontWeight="Medium" Margin="5,0,0,0"/>
                                    </Grid>
                                </Button>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" TargetName="Bd" Value="{StaticResource Item.MouseOver.Background}"/>
                                <Setter Property="BorderBrush" TargetName="Bd" Value="{StaticResource Item.MouseOver.Border}"/>
                                <Setter Property="Visibility" TargetName="Bn" Value="Visible"></Setter>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>


    <!-- Template -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Top -->
        <TextBox x:Name="GruopNameBlock" SelectionBrush="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}" Background="{x:Null}" IsReadOnly="True" FontSize="1.333" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
        <StackPanel Orientation="Horizontal" Margin="20,25,0,25" Grid.Row="0">
            <TextBlock HorizontalAlignment="Left" Text="Группа" FontFamily="HelveticaNeueCyr" Margin="0,0,5,0" FontSize="21.333" VerticalAlignment="Center" FontWeight="Medium"/>
            <TextBox x:Name="GroupName" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontFamily="HelveticaNeueCyr" HorizontalAlignment="Left" Background="{x:Null}" BorderBrush="{x:Null}" IsReadOnly="True" Foreground="{StaticResource ZappChat.Puple}" FontSize="21.333" KeyDown="GroupName_KeyDown" LostKeyboardFocus="GroupName_LostKeyboardFocus" VerticalAlignment="Center" FontWeight="Medium" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="30,25">
            <Button Content="Переименовать" Foreground="{StaticResource ZappChat.Blue}" BorderBrush="{StaticResource ZappChat.VeryLightSky}" FontFamily="HelveticaNeueCyr" Margin="0,0,20,0" Padding="10" Background="Transparent" Click="Button_Click" Cursor="Hand" BorderThickness="1" FontSize="14.667" />
            <Button x:Name="AddFriendInGroup" Content="Добавить контакт" Foreground="{StaticResource ZappChat.Blue}" BorderBrush="{StaticResource ZappChat.VeryLightSky}" FontFamily="HelveticaNeueCyr" Margin="20,0,0,0" Padding="10" Background="Transparent" Cursor="Hand"
                    Command="{Binding Name, ElementName=AddFriendInGroup, Converter={StaticResource CommandConverter}}"
                    CommandParameter="{Binding ChatMemberId}" FontSize="14.667"/>
        </StackPanel>
        <!-- Middle -->
        <ListBox ScrollViewer.CanContentScroll="False" Grid.Row="1" ItemsSource="{Binding Path=FriendList}" Background="{x:Null}" BorderBrush="{StaticResource ZappChat.Grey}" BorderThickness="0,1,0,0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Padding="0,10,0,5">
            <ListBox.Resources>
                <ResourceDictionary Source="/Controls/DataTemplates/UserControlsFriendDataTemplate.xaml"/>
            </ListBox.Resources>
        </ListBox>
        <!-- Bottom -->
        <Button x:Name="GroupDelete" Grid.Row="2" HorizontalAlignment="Left" Background="{StaticResource ZappChat.VeryLightSky}" Margin="15" Cursor="Hand" 
                Command="{Binding Name, ElementName=GroupDelete, Converter={StaticResource CommandConverter}}"
                CommandParameter="{Binding ChatMemberId}" BorderBrush="{x:Null}" Padding="5">
            <Grid Margin="10,7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Rectangle Fill="{StaticResource ZappChat.Blue}" Height="1" Width="12" RenderTransformOrigin="0.5,0.5" Grid.Column="0" Margin="0" >
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="45"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                </Rectangle>
                <Rectangle Fill="{StaticResource ZappChat.Blue}" Width="12" Height="1" Grid.Column="0" RenderTransformOrigin="0.5,0.5">
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-45"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                </Rectangle>
                <TextBlock Foreground="{StaticResource ZappChat.Blue}" Grid.Column="1" Text="Удалить группу" FontFamily="HelveticaNeueCyr" FontSize="13.333" FontWeight="Medium" Margin="5,0,0,0"/>
            </Grid>
        </Button>
    </Grid>
</UserControl>

